<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="anatlyzer.experiments.newExperiment" name="New experiment" schema="schema/anatlyzer.experiments.newExperiment.exsd"/>

   <extension
         id="sampleBuilderRemove"
         name="Sample Project BuilderRemove"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true">
         <run
               class="anatlyzer.experiments.builder.SampleBuilderRemove">
         </run>
      </builder>
   </extension>
   <extension
         id="batchExperimentNature"
         name="Batch experiment nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="anatlyzer.experiments.builder.BatchExperimentNature">
         </run>
      </runtime>
      <builder
            id="anatlyzer.experiments.sampleBuilderRemove">
      </builder>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Batch experiment nature commands"
            id="anatlyzer.experiments.batchExperimentNature.category">
      </category>
      <command
            name="Add/RemoveBatch experiment nature"
            defaultHandler="anatlyzer.experiments.builder.AddRemoveBatchExperimentNatureHandler"
            categoryId="anatlyzer.experiments.batchExperimentNature.category"
            id="anatlyzer.experiments.addRemoveBatchExperimentNature">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.projectConfigure?after=additions">
         <command
               commandId="anatlyzer.experiments.addRemoveBatchExperimentNature"
               label="Disable Sample builder"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                        <test
                              value="anatlyzer.experiments.batchExperimentNature"
                              property="org.eclipse.core.resources.projectNature">
                        </test>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="anatlyzer.experiments.addRemoveBatchExperimentNature"
               label="Enable Sample builder"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                        <not>
                           <test
                                 value="anatlyzer.experiments.batchExperimentNature"
                                 property="org.eclipse.core.resources.projectNature">
                           </test>
                        </not>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         id="xmlProblem"
         name="XML Problem"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="Batch experiments"
            icon="icons/sample.gif"
            class="org.eclipse.ui.navigator.CommonNavigator"
            id="anatlyzer.experiments.batch">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerActionBinding
            viewerId="anatlyzer.experiments.batch">
         <includes>
            <actionExtension
                  pattern="org.eclipse.ui.navigator.resources.*">
            </actionExtension>
         </includes>
      </viewerActionBinding>
      <viewerContentBinding
            viewerId="anatlyzer.experiments.batch">
         <includes>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resourceContent">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.filters.*">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.linkHelper">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.workingSets">
            </contentExtension>
         </includes>
      </viewerContentBinding>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.ui.resourcePerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.navigator.ProjectExplorer"
               relationship="stack"
               id="anatlyzer.experiments.batch">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="anatlyzer.experiments"
            name="Experiments">
      </category>
      <wizard
            category="anatlyzer.experiments"
            class="anatlyzer.experiments.wizards.NewExperimentConfiguration"
            icon="icons/experiment16x16.png"
            id="anatlyzer.experiments.wizards.NewExperimentConfiguration"
            name="New experiment configuration">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="anatlyzer.experiments.editors.ExperimentConfigurationEditor"
            contributorClass="anatlyzer.experiments.editors.ExperimentConfigurationEditorContributor"
            extensions="exp"
            icon="icons/experiment16x16.png"
            id="anatlyzer.experiments.editors.ExperimentConfigurationEditor"
            name="Experiment Configuration Editor">
      </editor>
   </extension>

</plugin>
